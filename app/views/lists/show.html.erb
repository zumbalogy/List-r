<% if current_user.id == @list.user_id %>


<form method='post' action='/user/delete'>
    <input type='hidden' name='_method' value="<%= destroy_user_session_path %>" >
    
    <button id='submit'>Log out</button>
</form>


<div style='display:inline;'>
    <form style='display:inline;' method='post' action='/list/<%= params[:list_name].gsub(' ','_') %>/item'>

        <input type='text' name='title' placeholder='new item'>

        <input name='user_id' type='hidden' value='<%= current_user.id %>'>

         <input name="authenticity_token" 
                       type="hidden" 
                       value="<%= form_authenticity_token %>" />
        <input type='submit'>

    </form>
</div>

<br/>
<br/>
<br/>

<table>
    <% @list.items.each do |item| %>
        <tr>
            <td>
                <%= item.title %>
            </td>
            <td>
                <%= item.director  %>
            </td>
            <td>
                <%= item.recommended_by %>
            </td>
            <td>
                <%= item.where %>
            </td>
            <td>
                <%= item.year %>
            </td>
            <td>
                <%= item.language %>
            </td>
            <td>
                <%= item.genre %>
            </td>
            <td>
                <%= item.notes %>
            </td>
            <td>
                <%= item.notes2 %>
            </td>
            <td>
                <form method='post' action='/item/delete'>
                    <input type='hidden' name='list_name' value="<%= params[:list_name].gsub(' ','_') %>">
                    <input name="authenticity_token" 
                       type="hidden" 
                       value="<%= form_authenticity_token %>" />
                        
                    <button id='submit'>Delete</button>
                </form>
            </td>

        </tr>
    <% end %>
</table>

<% end %>
