<h3>Welcome <%= current_user.email %></h3>

<form method='post' action='/user/delete'>
    <input type='hidden' name='_method' value="<%= destroy_user_session_path %>" >
    
    <button id='submit'>Log out</button>
</form>


<a href="/new">New List</a>


<table class='table'>
    <% current_user.lists.each do |foo| %>
    <tr>
        <td>
            <a href="/list/<%=foo.name.gsub(' ','_')%>">
                <%= foo.name %>
            </a>
        </td>

        <td>
        <form method='post' action="/delete/<%=foo.name.gsub(' ','_')%>" >
            <input name="authenticity_token" 
                    type="hidden" 
                    value="<%= form_authenticity_token %>" />
            <input name='id' type='hidden' value='<%= foo.id %>'>
            <button>
                Delete
            </button>
        </form>

        </td>
        
        <br/>
    </tr>
    <% end %>
</table>